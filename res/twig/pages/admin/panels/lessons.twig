<div class="tab-pane fade {%if area == 'lessons'%} in active {%endif%}" id="tabLessons">
    <form role="form" class="form-horizontal" action="/admin/lessons" method="post">
        <legend>Añadir clase</legend>
        <div class="form-group">
            <label class="col-md-4 control-label" for="lesson_name">Clase</label>
            <div class="col-md-4">
                <div class="input-group">
                    <input id="appendedtext" name="lesson_name" class="form-control" placeholder="Nombre de la clase" type="text" required="">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-plus"></i>
                        </button>
                    </div>
                </div>
                <p class="help-block">Nombre de la nueva clase que quieres añadir</p>
            </div>
        </div>
    </form>
    <hr/>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Clase</th>
                    <th>Creado por</th>
                    <th>Creado el</th>
                </tr>
            </thead>
            <tbody>
                {% for lesson in lessons_list %}
                    <tr>
                        <td>
                            <form action="/admin/lessons" method="post">
                                <button name="delete_lesson" value="{{ lesson.getId }}" type="submit" style="font-size: 1em; border:0px solid transparent;" class="glyphicon glyphicon-remove-circle"></button>
                                {{ lesson.getName }}
                            </form>
                        </td>
                        <td>{{ lesson.getCreateBy.getFullName }}</td>
                        <td>{{ lesson.getCreateAt|localizeddate('full', 'none', 'es') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>